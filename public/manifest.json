{
  "manifest_version": 3,
  "name": "TabVault",
  "version": "0.1.0",
  "description": "Save your browser tabs to Notion with one click",
  "permissions": ["tabs", "storage", "activeTab"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
